@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>Confirmare email</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <h4>Pagina in lucru</h4>
        <p>
            Aceasta aplicatie nu are momentan setat serviciul de confirmare pe email. Pentru a va confirma contul, va rugam, faceti click pe linkul urmator: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click aici pentru a confirma contul</a>
        </p>
    }
    else
    {
        <p>
            Please check your email to confirm your account.
        </p>
    }
}
